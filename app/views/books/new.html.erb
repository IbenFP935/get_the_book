<div class="container">
  <div class="row justify-content-center mb-3 ">
    <div class="col-12 col-lg-8">
        <%= simple_form_for(@book) do |f| %>
        <%= f.association :users %>
        <%= f.input :title %>
        <%= f.input :year %>
        <%= f.input :author %>
        <%= f.input :description, as: :text %>
        <%= f.input :price %>
        <%= f.input :condition %>
        <%= f.button :submit, "Ready", class: "btn-flat" %>
      <% end %>
    </div>
  </div>
</div>


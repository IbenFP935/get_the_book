<div class="container form p-3 mb-3" style="width: 50%; height: 100%; background-color: #ececec; border-radius: 5px; box-shadow: 0 0 5px rgba(0,0,0,0.2);">
  <h4 style="font-family: Nunito" class="form-title">Upload Book</h4>
  <br>
  <div class="row justify-content-center">
    <div class="col-lg-12 col-md-6 col-md-offset-3">
      <%= simple_form_for (@book) do |f| %>
        <%= f.input :title, :input_html => { :class => 'filler' } %>

        <%= f.input :author, :input_html => { :class => 'filler' } %>

        <%= f.input :year, :input_html => { :class => 'filler' } %>

        <%= f.input :description, :input_html => { :class => 'filler' } %>

        <%= f.input :condition, collection: ['new', 'used', 'damaged', 'highly damaged'], :input_html => { :class => 'filler' }  %>

        <%= f.input :price, :input_html => { :class => 'filler' } %>

        <%= f.input :photo, as: :file, :input_html => { :class => 'filler' }%>
        <br>

        <div class="form-actions mb-5 btn-success filler" style="width: 200px; border-radius: 5px">
          <%= f.button :submit, "Submit new book" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

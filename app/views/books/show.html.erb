<div class="container">
  <h1><%= @book.title %></h1>
  <h6>
    <% if policy(@book).edit? %>
      <%= link_to "Update", edit_book_path(@book) %>
    <% end %>
  </h6>
  <h6>
    <% if policy(@book).destroy? %>
      <%= link_to book_path(@book), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_book"></i>
      <% end %>
    <% end %>
  </h6>
  <div class="row">
    <div class="col-sm-12 col-md-6 d-flex">
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Title</th>
            <th>Description</th>
            <th>Year</th>
            <th>Condition</th>
            <th>Price</th>
          </thead>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.description %>
          </td>
          <td>
            <%= @book.year %>
          </td>
          <td>
            <%= @book.condition %>
          </td>
          <td>
            <%= @book.price %>
          </td>
        </tbody>
      </table>
    </div>
    </div>
  </div>
  <%= link_to "See all books", books_path %>
</div>




<div class="container">

  <h1><%= @book.name %></h1>
  <%= link_to "Book Index", root_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Book</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Title</th>
            <th>Description</th>
            <th>Year</th>
            <th>Condition</th>
            <th>Price</th>
          </thead>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.name %></td>
              <td><%= book.description %></td>
              <td>
                <%= link_to book_path(@book), method: :delete, data: { confirm: "Are you sure?" } do %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>
</div>

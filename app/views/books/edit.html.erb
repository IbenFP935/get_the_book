<div class="container">
  <h2>Update</h2>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for (@book) do |f| %>
        <%= f.input :title, class: 'form-control' %>

        <%= f.input :author, class: 'form-control' %>

        <%= f.input :year, class: 'form-control' %>

        <%= f.input :description, class: 'form-control' %>

        <%= f.input :condition, class: 'form-control' %>

        <%= f.input :price, class: 'form-control' %>

        <%= f.input :photo, as: :file, class: 'form-control'%>

        <%= f.submit "Save changes", class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>

<div class="container form">
  <h4 style="font-family: Nunito" class="form-title">Update Book</h4>
  <br>
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-6 col-md-offset-3">
      <%= simple_form_for (@book) do |f| %>
        <%= f.input :title %>

        <%= f.input :author %>

        <%= f.input :year %>

        <%= f.input :description %>

        <%= f.input :condition, collection: ['new', 'used', 'damaged', 'highly damaged']  %>

        <%= f.input :price %>

        <%= f.input :photo, as: :file%>
        <br>
        <%= f.submit "Save changes", class: "btn btn-success mb-5"  %>
      <% end %>
    </div>
  </div>
</div>

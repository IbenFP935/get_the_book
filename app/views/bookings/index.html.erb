<div class="mb-5">
  <h1 id="index-title" class="text-center"></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-3 col-lg-3">
      <div class="pr-5 mr-5">
        <div class="pl-3">
          <%  if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "profile-pic-bookings avatar" %>
          <% else %>
            <%= image_tag "logo.png", class: "profile-pic-bookings avatar" %>
          <% end %>
        </div>
        <br>
        <p class="pb-3"><strong><%= @current_user.username.capitalize %>'s bookings</strong></p>

      </div>
    </div>
    <div class="col-sm-9 col-lg-9">
      <% @bookings.each do |booking| %>
        <div class="card-profile-box p-5 parent mb-5 ml-5">
          <div class="pl-5 pt-3 justify-content-right">
          <p class="mb-0">Booking for</p>
          <p id="bookings-card-title"><%= booking.book.title %></p>
          <p>Lent by <%= booking.book.owner.username %> & Rented by <%= current_user.username.capitalize %></p>
          <br>
          <p><strong>Price $<%= booking.book.price %></strong></p>
          <p><strong>From <%= booking.start_date.to_s.split.first %> to <%= booking.end_date.to_s.split.first %></strong></p>
          </div>
          <%= image_tag "books.png", class: "child-bookings-book-img" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

